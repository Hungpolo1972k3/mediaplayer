                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="10,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEB7E;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Edit info" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="10,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE946;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Properties" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="ArtistElement" Visibility="Collapsed" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,130,0,0">
                <Grid Margin="0,0,30,0">
                    <Ellipse Width="170" Height="170" Fill="#eeeeee" Stroke="#ced3d3" StrokeThickness="1">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0" />
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <FontIcon Glyph="&#xE77B;" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <StackPanel>
                    <TextBlock Text="Unknown artist" FontWeight="Bold" FontSize="35" VerticalAlignment="Top"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                        <TextBlock Text="1 albums * " FontSize="15"/>
                        <TextBlock Text="3 songs * " FontSize="15"/>
                        <TextBlock Text=" 00:48 run time" FontSize="15"/>
                    </StackPanel>
                    <TextBlock Text="Artist * Unknown genre" FontWeight="Bold" FontSize="35" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10" >
                        <Button Background="#d03f0a" BorderThickness="1" BorderBrush="#d03f0a" CornerRadius="5" Padding="10,5" >
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE768;" FontSize="16" Foreground="White" Margin="0,0,10,0"/>
                                <TextBlock Text="Play all" FontSize="16" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button Background="white" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Padding="10,5" Margin="10,0" >
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE8B1;" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Shuffle and Play" FontSize="16" />
                            </StackPanel>
                        </Button>
                        <Button Background="white" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5" Padding="10,5" Margin="10,0" >
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE710;" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Add to" FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="InYourLibrary" Text="In your library" FontSize="30" Margin="50,340,0,0" Visibility="Visible"/>
            <GridView x:Name="ListArtist_Songs" Margin="50,390,0,0">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="6"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel DoubleTapped="ShowAlbumElement" PointerEntered="Artist_Song_elements_PointerEntered" PointerExited="Artist_Song_elements_PointerExited">
                            <Grid Margin="20,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Hình vuông bọc Ellipse -->
                                <Rectangle Width="150" Height="150" Fill="#eeeeee" Stroke="#ced3d3" StrokeThickness="1" RadiusX="10" RadiusY="10" >
                                    <Rectangle.RenderTransform>
                                        <RotateTransform Angle="0" />
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <CheckBox x:Name="CheckBox_Artist_Song"   
                                      IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                      Checked="CheckBox_Artist_Song_Checked" 
                                      Unchecked="CheckBox_Artist_Song_Unchecked" 
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

                                <Button x:Name="Artist_Song_Play_btn" Visibility="Collapsed" Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Style="{StaticResource RoundButtonStyle}">
                                    <Button.Content>
                                        <FontIcon Glyph="&#xE102;" FontSize="15"/>
                                    </Button.Content>
                                </Button>
                                <Button x:Name="Artist_Song_Info_btn" Visibility="Collapsed"  Width="45" Height="45" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Style="{StaticResource RoundButtonStyle}">
                                    <Button.Content>
                                        <FontIcon Glyph="&#xE10C;" FontSize="15"/>
                                    </Button.Content>
                                </Button>
                                <FontIcon Glyph="&#xe93c;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="70" Margin="0,0,0,30" />
                            </Grid>
                            <StackPanel VerticalAlignment="Bottom" Margin="20,0,0,5">
                                <TextBlock Text="{Binding Title_Album_name}" 
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Bottom" 
                                    TextAlignment="Left" 
                                    FontSize="16" 
                                    Foreground="Black" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <Border x:Name="CheckBoxBar_Artist_Song" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Gray" BorderThickness="1" Margin="50,330,0,0" Height="45" Background="White" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0">
                        <CheckBox x:Name="CheckBoxAll_Artist_Song" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="CheckedCount_Artist_Song" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text=" albums selected *" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <Button BorderBrush="Transparent" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button.Content>
                                <TextBlock Text="Clear" Foreground="Red" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <Button Background="#d03f0a" Padding="10,5" BorderThickness="0" CornerRadius="5" Margin="20,0,15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE102;" FontSize="15" Foreground="White" Margin="0,0,5,0"/>
                            <TextBlock Text="Play" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE893;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Play next" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE109;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Add to" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xe93c;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Show Album" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEFA9;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Show Artist" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="10,5" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="Transparent" Margin="15,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xEB7E;" FontSize="15" Foreground="Black" Margin="0,0,5,0"/>
                            <TextBlock Text="Edit info" Foreground="Black" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
