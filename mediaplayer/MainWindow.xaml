<Window
    x:Class="MediaPlayerWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MediaPlayerWinUI"
    mc:Ignorable="d"
    Title="Media Player">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Grid Background="#F3F3F3" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="10,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <FontIcon VerticalAlignment="Center" Glyph="&#xE72B;" FontSize="10" Margin="10,0" />
                    <Image Source="C:\Users\Lapto\source\repos\mediaplayer\mediaplayer\Assets\mediaplayer.png" Width="20" Height="20" Margin="10,0,30,0"/>
                    <TextBlock Text="Media Player" VerticalAlignment="Center" FontSize="12"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox PlaceholderText="Search" Width="300" Height="30" Margin="0,0,10,0" VerticalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <!-- Nút với biểu tượng kính lúp -->
                    <Button Width="40" Height="40" VerticalAlignment="Center">
                        <Button.Content>
                            <FontIcon Glyph="&#xE721;" FontSize="18"/>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <ListBox>
                        <ListBoxItem Tapped="OnHomeClick">
                            <StackPanel Orientation="Horizontal" >
                                <SymbolIcon Symbol="Home" Width="24" Height="24" />
                                <TextBlock Text="Home" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Tapped="OnMusicLibraryClick">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE189;" FontSize="24" />
                                <TextBlock Text="Music Library" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Tapped="OnVideoLibraryClick">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE8B2;" FontSize="24"/>
                                <TextBlock Text="Video Library" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Tapped="OnPlayQueueClick">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE90B;" FontSize="24" />
                                <TextBlock Text="Play Queue" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem  Tapped="OnPlayListClick">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE93C;" FontSize="24" />
                                <TextBlock Text="Playlists" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel  >
                <StackPanel Grid.Row="3" x:Name="Playlist_elements" Visibility="Collapsed">
                    <ListBox >
                        <ListBoxItem Tapped="OnPlaylistElementsClick">
                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <FontIcon Glyph="&#xE189;" Width="20" Height="20" FontSize="20" />
                                <TextBlock Text="...." VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <local:Home x:Name="Home" Visibility="Visible"/>
                <local:MusicLibrary x:Name="MusicLibrary" Visibility="Collapsed"/>
                <local:VideoLibrary x:Name="VideoLibrary" Visibility="Collapsed" />
                <local:PlayQueue x:Name="PlayQueue" Visibility="Collapsed" />
                <local:PlayList x:Name="PlayList" Visibility="Collapsed" />
                <local:PlaylistElement x:Name="PlaylistElement" Visibility="Collapsed"/>
            </Grid>
        </Grid>

        <!--Bottom-->
        <Grid Grid.Row="1" Background="#F3F3F3" >
            <MediaPlayerElement x:Name="mediaPlayerElement" 
                                Stretch="Fill" 
                                AutoPlay="True" 
                                AreTransportControlsEnabled="True" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Nút "Chọn tệp" với biểu tượng OpenFile -->
                <Button Width="50" Height="50">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="OpenFile" Width="40" Height="40"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <!-- Nút "Phát" với biểu tượng Play -->
                <Button Width="50" Height="50" Click="OnPlayClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Play" Width="40" Height="40"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <!-- Nút "Tạm dừng" với biểu tượng Pause -->
                <Button Width="50" Height="50" Click="OnPauseClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Pause" Width="40" Height="40"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!-- Nút "Dừng" với biểu tượng Stop -->
                <Button Width="50" Height="50" Click="OnStopClick">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Stop" Width="40" Height="40"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>